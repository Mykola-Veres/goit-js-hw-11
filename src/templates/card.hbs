{{#each this}}
<div class="photo-card">
  
    <img class="gallery__image" src="{{webformatURL}}" alt={{tags}} loading="lazy" />
  
  <div class="info">
    <p class="info-item">Likes
      <b>{{likes}}</b>
    </p>
    <p class="info-item">Views
      <b>{{views}}</b>
    </p>
    <p class="info-item">Comments
      <b>{{comments}}</b>
    </p>
    <p class="info-item">Downloads
      <b>{{downloads}}</b>
    </p>
  </div>
</div>
{{/each}}

